<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LoginFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/blaztt_button"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:fontFamily="@font/oswald_medium"
        android:textSize="27dp"
        android:textColor="@color/black2"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etUserLogin"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:background="@drawable/bordered_edit_text"
        android:layout_margin="30dp"
        android:paddingLeft="20dp"
        android:hint="Usuario"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etPasswordLogin"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:background="@drawable/bordered_edit_text"
        android:paddingLeft="20dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:text="¿Has olvidado la contraseña?"
        android:textColor="@color/grey"
        android:textSize="16dp"
        android:fontFamily="@font/oswald_regular"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:clickable="true"/>
    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black2"
        android:text="Iniciar Sesión"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bordered_edit_text"
        android:fontFamily="@font/oswald_semibold"
        android:clickable="true"/>
    <TextView
        android:id="@+id/btnRegistro"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black2"
        android:text="Registrarse"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordered_edit_text"
        android:fontFamily="@font/oswald_semibold"
        android:clickable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="________________________"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o si lo prefieres"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="________________________"
            android:layout_gravity="right"/>
    </LinearLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black2"
        android:text="Continuar con Facebook"
        android:drawableStart="@drawable/facebook"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bordered_edit_text"
        android:fontFamily="@font/oswald_semibold"
        android:clickable="true"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:drawableStart="@drawable/google"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/black2"
        android:text="Continuar con Google"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bordered_edit_text"
        android:fontFamily="@font/oswald_semibold"
        android:clickable="true"/>

</LinearLayout>