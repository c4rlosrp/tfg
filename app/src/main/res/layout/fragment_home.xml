<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="5dp"
        android:gravity="right">

        <ImageView
            android:id="@+id/ivBlaztt"
            android:layout_width="335dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/transparente"
            android:scaleType="fitStart"
            android:src="@drawable/blaztt_button" />
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search"
            android:backgroundTint="@color/transparente"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/RLSectionHombre"
                                android:layout_width="360dp"
                                android:layout_height="320dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border_section"
                                android:padding="1dp"
                                android:clickable="true">

                                <ImageView
                                    android:id="@+id/ivHombre"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tvHombre"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white2"
                                        tools:text="Hombres"
                                        android:fontFamily="@font/oswald_regular"
                                        android:textStyle="bold"
                                        android:layout_margin="25dp"
                                        android:textSize="30dp"
                                        android:shadowColor="@color/black"
                                        android:shadowDx="3"
                                        android:shadowDy="3"
                                        android:shadowRadius="8"/>
                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/RLSectionMujer"
                                android:layout_width="360dp"
                                android:layout_height="320dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border_section"
                                android:padding="1dp"
                                android:clickable="true">

                                <ImageView
                                    android:id="@+id/ivMujer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tvMujer"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white2"
                                        tools:text="Mujeres"
                                        android:fontFamily="@font/oswald_regular"
                                        android:textStyle="bold"
                                        android:layout_margin="25dp"
                                        android:textSize="30dp"
                                        android:shadowColor="@color/black"
                                        android:shadowDx="3"
                                        android:shadowDy="3"
                                        android:shadowRadius="8"/>
                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/RLSectionNi単os"
                                android:layout_width="360dp"
                                android:layout_height="320dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border_section"
                                android:padding="1dp"
                                android:clickable="true">

                                <ImageView
                                    android:id="@+id/ivNi単os"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tvNi単os"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white2"
                                        tools:text="Ni単os"
                                        android:fontFamily="@font/oswald_regular"
                                        android:textStyle="bold"
                                        android:layout_margin="25dp"
                                        android:textSize="30dp"
                                        android:shadowColor="@color/black"
                                        android:shadowDx="3"
                                        android:shadowDy="3"
                                        android:shadowRadius="8"/>
                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>
            </ScrollView>

    </LinearLayout>


</LinearLayout>